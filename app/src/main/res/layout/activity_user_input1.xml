<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".UserInputActivity1">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Year: "
            android:textSize="25sp"
            android:layout_row="0"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/etYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:layout_row="0"
            android:layout_column="1"
            />

        <TextView
            android:id="@+id/tvMake"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Make: "
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/etMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="1"
            />

        <TextView
            android:id="@+id/tvModel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Model: "
            android:textSize="25sp"
            android:layout_row="2"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/etModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:layout_row="2"
            android:layout_column="1"
            />

        <TextView
            android:id="@+id/tvColor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Color: "
            android:textSize="25sp"
            android:layout_row="3"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/etColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:layout_row="3"
            android:layout_column="1"
            />

        <TextView
            android:id="@+id/tvEngine"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Engine: "
            android:textSize="25sp"
            android:layout_row="4"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/etEngine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:layout_row="4"
            android:layout_column="1"
            />

        <TextView
            android:id="@+id/tvTransType"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Transmission Type: "
            android:textSize="25sp"
            android:layout_row="5"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/etTransType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:layout_row="5"
            android:layout_column="1"
            />

        <TextView
            android:id="@+id/tvTitleStatus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Title Status: "
            android:textSize="25sp"
            android:layout_row="6"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/etTitleStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:layout_row="6"
            android:layout_column="1"
            />

    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid"
        android:text="Button"
        android:onClick="onClick"/>
</RelativeLayout>