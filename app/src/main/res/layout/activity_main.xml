<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Year:"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make:"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_below="@+id/year"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Model:"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_below="@+id/make"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_below="@+id/model"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/engine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Engine:"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_below="@+id/color"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/transType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transmission Type:"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_below="@+id/engine"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/titleStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title Status:"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_below="@+id/transType"
        android:textSize="25sp"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleStatus">

        <Button
            android:id="@+id/btn1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Button1"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onClickOne"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Button2"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onClickTwo"/>
    </GridLayout>


</RelativeLayout>